<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/re1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity12">
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/nf"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wenzi"
            android:text="新朋友"
            android:layout_marginLeft="@dimen/wenzi" />
        <TextView
            android:id="@+id/nf2"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wenzi"
            android:text=">"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/wenzi" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_below="@+id/rl1"
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tong"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wenzi"
            android:text="群通知"
            android:layout_marginLeft="@dimen/wenzi" />
        <TextView
            android:id="@+id/tong1"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/wenzi"
            android:text=">"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/wenzi" />
    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/rl3"
        android:layout_below="@id/rl2"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:background="#FFFFFF"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/friend"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="好友"
                android:textSize="@dimen/wenzi"
                android:gravity="center"
                android:background="@drawable/bluetype"/>
            <TextView
                android:id="@+id/group"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="分组"
                android:textSize="@dimen/wenzi"
                android:gravity="center"/>
            <TextView
                android:id="@+id/groupchat"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="群聊"
                android:textSize="@dimen/wenzi"
                android:gravity="center" />
            <TextView
                android:id="@+id/install"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="设备"
                android:textSize="@dimen/wenzi"
                android:gravity="center" />
            <TextView
                android:id="@+id/addressbook"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="通讯录"
                android:textSize="@dimen/wenzi"
                android:gravity="center" />
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/rl3"
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>