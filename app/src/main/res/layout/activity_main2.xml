<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">
    <Button
        android:id="@+id/la2"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/letfjiantou"
        />
    <TextView
        android:id="@+id/duanxin"
        android:layout_below="@+id/la2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入短信验证码"
        android:textSize="45dp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"/>
    <LinearLayout
        android:layout_below="@+id/duanxin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/duanxin2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/phone_num1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/Yanzhengma"
            android:text="已向"/>
        <TextView
            android:id="@+id/pn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1FA8E6"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="发送消息"/>
    </LinearLayout>
    <TextView
        android:layout_below="@+id/duanxin2"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:textSize="50dp"
        android:text="__"
        android:id="@+id/ip1"/>
    <TextView
        android:layout_below="@+id/duanxin2"
        android:layout_toRightOf="@id/ip1"
        android:layout_width="63dp"
        android:textSize="50dp"
        android:layout_height="80dp"
        android:text="__"
        android:id="@+id/ip2"/>
    <TextView
        android:layout_below="@+id/duanxin2"
        android:layout_toRightOf="@id/ip2"
        android:layout_width="63dp"
        android:textSize="50dp"
        android:layout_height="80dp"
        android:text="__"
        android:id="@+id/ip3"/>
    <TextView
        android:layout_below="@+id/duanxin2"
        android:layout_toRightOf="@id/ip3"
        android:layout_width="63dp"
        android:layout_height="80dp"
        android:textSize="50dp"
        android:text="__"
        android:id="@+id/ip4"/>
    <TextView
        android:layout_below="@+id/duanxin2"
        android:layout_toRightOf="@id/ip4"
        android:layout_width="63dp"
        android:layout_height="80dp"
        android:textSize="50dp"
        android:text="__"
        android:id="@+id/ip5"/>
    <TextView
        android:layout_below="@+id/duanxin2"
        android:layout_toRightOf="@id/ip5"
        android:layout_width="63dp"
        android:layout_height="80dp"
        android:textSize="50dp"
        android:text="__"
        android:id="@+id/ip6"/>
    <EditText
        android:id="@+id/ip0"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/duanxin2"
        android:layout_marginLeft="8dp"
        android:maxLength="6"
        android:textSize="50dp"
        android:cursorVisible="false"
        android:letterSpacing="0.7"
        android:background="@null"
        android:inputType="number"/>
    <TextView
        android:id="@+id/chongxin"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_below="@id/ip1"
        android:text="重新发送"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/fasong"
        android:text="发送"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chongxin"
        android:background="#00000000"/>
</RelativeLayout>