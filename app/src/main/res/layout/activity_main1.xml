<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:id="@+id/layout"
            android:layout_marginTop="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/letfjiantou"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入手机号码"
            android:textSize="45dp"
            android:textColor="#000000"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp">
            <CheckBox
                android:layout_centerVertical="true"
                android:id="@+id/cb1"
                style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/cb1"
                android:textSize="20dp"
                android:text="阅读和同意"/>
            <Button
                android:id="@+id/b1"
                android:onClick="xieyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户协议"
                android:textSize="20dp"
                android:layout_toRightOf="@id/tv1"
                android:layout_centerVertical="true"
                android:textColor="#125BD8"
                android:background="#00000000"
                />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="和"
                android:textSize="20dp"
                android:layout_toRightOf="@id/b1"
                android:layout_centerVertical="true"
                />
            <Button
                android:background="#00000000"
                android:onClick="zc"
                android:id="@+id/zc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隐私政策"
                android:textSize="20dp"
                android:layout_toRightOf="@id/tv2"
                android:layout_centerVertical="true"
                android:textColor="#125BD8"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:gravity="center">
            <Spinner
                android:id="@+id/dianhua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/number"
                android:layout_toRightOf="@id/dianhua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:hint="请输入手机号"
                android:textSize="30dp"
                android:inputType="number"
                android:maxLength="11"
                />
            <Button
                android:id="@+id/xiayibu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:background="#AE33AEF1"
                android:text="下一步"
                android:textSize="20dp"
                android:textColor="#FFFFFF">
            </Button>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
